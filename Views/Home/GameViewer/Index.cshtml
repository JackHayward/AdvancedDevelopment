@model IEnumerable<AdvancedDevelopment.Models.GameViewer.Game>

@{
    ViewData["Title"] = "Video Game List";
}

    <div class="col-md-12">
        <div class="jumbotron">
            <h1 class="display-4">Video Game List</h1>
            <p class="lead">Created to demonstrate CRUD functionality with a cloud hosted database. It requires you to be logged in to use it, either via the regular login system or the google login system.</p>
            <hr class="my-4">
            <p>Why not have a go?</p>
            <p class="lead">
                <a type="submit" class="btn btn-primary btn-lg" href="@Url.Action("Create", "Game")" role="button">Add a game to the list</a>
            </p>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameUrl)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ImageUrl != null)
                        {
                            <img src="@Url.Content(item.ImageUrl)" alt="Image" style="max-width: 200px" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameType)
                    </td>
                    <td>
                        <a href=@item.GameUrl target="_blank">@item.Name</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

